<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="logregBack" stylesheets="@css/mainPage.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tarasov.app.pc.RegisterController">
    <children>

        <!-- Поле для логина -->
        <TextField fx:id="usernameField" layoutX="151.0" layoutY="77.0" prefHeight="46.0" prefWidth="297.0" promptText="Логин">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <!-- Поле для пароля -->
        <PasswordField fx:id="passwordField" layoutX="151.0" layoutY="129.0" prefHeight="46.0" prefWidth="297.0" promptText="Пароль">
            <font>
                <Font size="14.0" />
            </font>
        </PasswordField>

        <PasswordField fx:id="confirmPasswordField" layoutX="151.0" layoutY="183.0" prefHeight="46.0" prefWidth="297.0" promptText="Повторите пароль">
            <font>
                <Font size="14.0" />
            </font>
        </PasswordField>

        <!-- Кнопка входа -->
        <Button fx:id="login_href" layoutX="241.0" layoutY="300.0" prefHeight="46.0" prefWidth="118.0" styleClass="but" text="Войти">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>

        <!-- Кнопка регистрации -->
        <Button fx:id="registerButton" layoutX="211.0" layoutY="242.0" prefHeight="46.0" prefWidth="178.0" styleClass="but" text="Регистрация">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
