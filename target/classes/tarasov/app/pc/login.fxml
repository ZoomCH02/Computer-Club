<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="logregBack" stylesheets="@css/mainPage.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tarasov.app.pc.LoginController">
    <children>

        <!-- Поле для логина -->
        <TextField fx:id="usernameField" layoutX="152.0" layoutY="125.0" prefHeight="46.0" prefWidth="297.0" promptText="Логин">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <!-- Поле для пароля -->
        <PasswordField fx:id="passwordField" layoutX="152.0" layoutY="177.0" prefHeight="46.0" prefWidth="297.0" promptText="Пароль">
            <font>
                <Font size="14.0" />
            </font>
        </PasswordField>

        <!-- Кнопка входа -->
        <Button fx:id="loginButton" layoutX="234.0" layoutY="230.0" prefHeight="46.0" prefWidth="133.0" styleClass="but" text="Войти">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>

        <!-- Кнопка регистрации -->
        <Button fx:id="registerButton" layoutX="223.0" layoutY="283.0" prefHeight="46.0" prefWidth="155.0" styleClass="but" text="Регистрация">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
